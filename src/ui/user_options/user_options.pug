doctype html
html(lang="en")
    head
        link(rel='stylesheet', href='../_main_style.sass')
        link(rel="stylesheet", href="style.sass")
    body(onload='test_load()')
        div(class='options_container')
            div(class='row')
                div(class='flex-item_options')
                    div(class='flex-item_icon_options')
                    form.inital(action="#")
                        input(type="text", name="first_name", placeholder='Name')
                        input(type="text", name="second_name", placeholder='Full name')
                        input(type="text", name="display_name", placeholder='display_name')
                        input(type="text", name="login", placeholder='Login')
                        input(type="text", name="email", placeholder='E-mail')
                        input(type="text", name="password", placeholder='Password')
                        input(type="text", name="phone", placeholder='Cellphone')
                        label
                            ='Choose photo:'
                        input(type="file", name="avatar", placeholder='avatar')

                        input(type="submit", value="Correction")
                        //a(href='#',class='forms_url') Enter?
                        //a(href='#',class='forms_url') forgot password?
                    form(action='#')
                        label
                            ='Choose new pass:'
                        input(type="text", name="oldPassword", placeholder='oldPassword')
                        input(type="text", name="newPassword", placeholder='newPassword')
                        input(type="submit", value="Change")



        script(src="script.js")
